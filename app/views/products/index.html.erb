<h1>Hello My friends at Tumo!!</h1>
<ul>
	<% @products.each do |product|%>

	<li><%= link_to product.name, product_path(product)%>
		
		<%= link_to 'Edit', edit_product_path(product) %><br>
	<%= image_tag product.photo unless product.photo.nil? %><br>
	<h2><%= product.description %></h2>
		
		<%= link_to 'Delete', product, method: :delete,data:{confirm: "Are you sure?"} %><br>
		
	</li>

</ul>
<% end %>
<%= link_to "New", new_product_path %>
	

